# The declarations for code files

code_files:
# View layer
- {name: View/ViewController.swift, path: Code/View/view_controller.swift.liquid}

# ViewModel layer
- {name: ViewModel/ViewModelProtocol.swift, path: Code/ViewModel/view_model_protocol.swift.liquid}
