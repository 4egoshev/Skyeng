# Model layer
- {name: Model/ModelProtocol.swift, path: Code/Model/model_protocol.swift.liquid}
- {name: Model/Model.swift, path: Code/Model/model.swift.liquid}

# Assembler layer
- {name: Assembler/AssemblyProtocol.swift, path: Code/Assembly/assembly_protocol.swift.liquid}
- {name: Assembler/Assembly.swift, path: Code/Assembly/assembly.swift.liquid}

# Router layer
- {name: Router/RouterProtocol.swift, path: Code/Router/router_protocol.swift.liquid}
- {name: Router/Router.swift, path: Code/Router/router.swift.liquid}
